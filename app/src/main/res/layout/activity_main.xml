<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/layout_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        >

        <TextView
            android:id="@+id/team_name_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Team A"
            android:layout_gravity="center"
            android:textSize="30sp"
            />

        <TextView
            android:id="@+id/team_score_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_marginTop="30px"
            android:layout_gravity="center"
            android:textSize="40sp"
            />

        <Button
            android:id="@+id/bt_score_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score"
            android:layout_marginTop="600px"
            android:layout_gravity="center"
            />
        <Button
            android:id="@+id/bt_minus_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Minus"
            android:layout_marginTop="60px"
            android:layout_gravity="center"
            />
        <Button
            android:id="@+id/bt_reset_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset"
            android:layout_marginTop="60px"
            android:layout_gravity="center"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_b"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/team_name_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Team B"
            android:layout_gravity="center"
            android:textSize="30sp"
            />

        <TextView
            android:id="@+id/team_score_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_marginTop="30px"
            android:layout_gravity="center"
            android:textSize="40sp"
            />

        <Button
            android:id="@+id/bt_score_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score"
            android:layout_marginTop="600px"
            android:layout_gravity="center"
            />

        <Button
            android:id="@+id/bt_minus_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Minus"
            android:layout_marginTop="60px"
            android:layout_gravity="center"
            />
        <Button
            android:id="@+id/bt_reset_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset"
            android:layout_marginTop="60px"
            android:layout_gravity="center"
            />

    </LinearLayout>

</LinearLayout>